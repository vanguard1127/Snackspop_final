<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/scale_5">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_photo1"
            android:layout_width="@dimen/food_pic"
            android:layout_height="@dimen/food_pic"
            android:contentDescription="TODO"
            android:src="@drawable/ic_logo_cir_red" />

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.40 AM"
                android:textColor="@color/black"
                android:textSize="@dimen/text_scale_10"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="adfsasdfwefwefewf"
                android:background="@drawable/rounded_rectangle"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_scale_18" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.40 AM"
                android:textColor="@color/black"
                android:textSize="@dimen/text_scale_10" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_photo2"
            android:layout_width="@dimen/food_pic"
            android:layout_height="@dimen/food_pic"
            android:src="@drawable/ic_logo_cir_red" />
    </LinearLayout>

</FrameLayout>