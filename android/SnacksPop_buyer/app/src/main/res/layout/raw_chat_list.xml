<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/scale_5">

    <LinearLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="@dimen/scale_10">

        <ImageView
            android:id="@+id/iv_photo1"
            android:layout_width="@dimen/food_pic"
            android:layout_height="@dimen/food_pic"
            android:src="@drawable/ic_logo_cir_red" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingStart="@dimen/scale_10"
            android:paddingEnd="@dimen/scale_10">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_photo1"
                android:layout_alignBottom="@id/iv_photo1"
                android:layout_toEndOf="@id/iv_photo1"
                android:drawablePadding="@dimen/scale_5"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="mksdjkjkjs"
                android:textColor="@color/black"
                android:textSize="@dimen/text_scale_20" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My last message"
                android:textSize="@dimen/text_scale_16"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_unread_cnt"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="123"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_unread"
            android:textColor="@android:color/white"
            android:gravity="center" />

    </LinearLayout>
</android.support.v7.widget.CardView>