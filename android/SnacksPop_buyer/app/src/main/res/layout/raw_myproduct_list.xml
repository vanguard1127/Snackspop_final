<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/scale_5">

    <LinearLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/scale_10">

        <ImageView
            android:id="@+id/iv_photo1"
            android:layout_width="@dimen/food_pic"
            android:layout_height="@dimen/food_pic"
            android:src="@drawable/ic_logo_cir_red" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/scale_5"
            android:paddingStart="@dimen/scale_10"
            android:paddingEnd="@dimen/scale_10"
            android:text="mksdjkjkjs"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_scale_15" />
        <Button
            android:id="@+id/bt_remove"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="#ff0000"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:text="Delete" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_marginLeft="5dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="right"
            android:text="$0.00"
            android:textSize="@dimen/text_scale_12"/>

    </LinearLayout>
</android.support.v7.widget.CardView>