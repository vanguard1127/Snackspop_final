<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/scale_5">

    <LinearLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/scale_10">

        <ImageView
            android:id="@+id/iv_photo1"
            android:layout_width="@dimen/food_pic"
            android:layout_height="@dimen/food_pic"
            android:src="@drawable/ic_logo_cir_red" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/scale_5"
            android:maxLines="1"
            android:paddingStart="@dimen/scale_10"
            android:paddingEnd="@dimen/scale_10"
            android:text="mksdjkjkjs"
            android:textColor="@color/black"
            android:textSize="@dimen/text_scale_15" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:text="$3.44"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_scale_12"/>
            <TextView
                android:id="@+id/tv_distance"
                android:text="333.33KM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_scale_12" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>