<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ll_main"
    android:paddingStart="@dimen/scale_15"
    android:paddingTop="@dimen/scale_5"
    android:paddingBottom="@dimen/scale_5"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="@dimen/scale_50"
        android:layout_height="@dimen/scale_50"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_logo_cir_red"/>

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="item Name"
        android:layout_gravity="center"
        android:background="@color/white"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/text_scale_12"
        />

</LinearLayout>